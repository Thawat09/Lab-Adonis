@layouts.master({title:"Posts"})
  <h1 class="ui header">Posts</h1>
  <ul class="ui bullet list">
    @each(post in posts)
      <li>
        <a href="{{ route('posts.show',{id: post.id}) }}">{{ post.title }}</a>
      </li>
    @endeach
  </ul>
  @!button({ label: 'New', action: route('posts.create') })
@end