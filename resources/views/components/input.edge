<div class="field">
    @if(label)
        <label for="{{ name }}">{{ label }}</label>
    @end
    @if(type=="submit")
        <input id="{{ name }}" class="ui button" {{ $props.except(['label']).toAttrs() }}>
    @else
        <input id="{{ name }}" type="{{ type }}" name="{{ name }}" size="{{ size }}" value="{{ value }}" {{ $props.except(['label']).toAttrs() }} placeholder="{{ placeholder }}" required>
    @end
</div>
